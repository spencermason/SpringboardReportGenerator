<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sigurdsonreportgenerator.MainFormController">
   <children>
      <MenuBar fx:id="mainMenu" layoutY="6.0">
        <menus>
          <Menu fx:id="EmployeeMenu" mnemonicParsing="false" text="Employees">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#addEmployee" text="Add Employee" />
                  <MenuItem mnemonicParsing="false" onAction="#editEmployee" text="Edit Employee" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Reports">
               <items>
                  <Menu mnemonicParsing="false" onAction="#generateReport" text="Generate A Report" />
                  <Menu fx:id="EditReportMenu" mnemonicParsing="false" onAction="#editReport" text="Edit Report Type" />
                  <Menu fx:id="AddReportMenu" mnemonicParsing="false" onAction="#addReportType" text="Add New Report Type To System" />
               </items>
            </Menu>
            <Menu fx:id="DatabaseMenu" mnemonicParsing="false" text="Database">
               <items>
                  <Menu mnemonicParsing="false" onAction="#reset" text="Reset" />
               </items>
            </Menu>
        </menus>
      </MenuBar>
      <ImageView fx:id="Logo" fitHeight="118.0" fitWidth="345.0" layoutX="159.0" layoutY="141.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@Logo.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
